{% extends 'layout.html.twig' %}
{% block page_contents %}
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10 title-dark">CAESAR CIPHER</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <div class="main-body">
        <div class="page-wrapper">
            <div class="row">
                <!-- [ Main Content ] start -->
                <div class="col-3">
                    <div class="card rounded shadow bg-white border border-dark">
                        <div class="card-header">Cipher Text</div>
                        <div class="card-body">
                            <div class="card-text">
                            <textarea class="form-control textarea pb-2" id="text-cipher"
                                      aria-describedby="text-cipher-Help" rows="10"></textarea>
                                <div id="text-cipher-Help" class="form-text">Copy the text to check here</div>
                            </div>
                            <div class="card-footer">
                                <button type="button" id="text-cipher-btn" class="btn btn-glow-primary btn-primary">
                                    Check
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-9">
                    <div class="row">
                        <div class="col-9">
                            {% include 'partials/letterFrequency.html.twig' %}
                        </div>
                        <div class="col-3">
                            <div class="card rounded shadow bg-white border border-dark">
                                <div class="card-header">Key</div>
                                <div class="card-body">
                                    <div class="card-text">
                                        <input type="number" class="number" id="caesar-key"/>
                                    </div>
                                    <div class="card-footer"><button type="button" id="caesar-key-btn" class="btn btn-glow-primary btn-primary">Check</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card rounded shadow bg-white border border-dark">
                                <div class="card-header">Result</div>
                                <div class="card-body">
                                    <div class="card-text">
                            <textarea id="caesar-result" class="textarea form-control readonly
                            disabled" rows="10" readonly></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('javascript/ciphers/caesar/caesar.js') }}"></script>
{% endblock %}